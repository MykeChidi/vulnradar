                                        {% elif value is iterable and value is not string %}
                                            {% for item in value %}
                                                <span class="tech-tag">{{ item }}</span>
                                            {% endfor %}
                                        {% else %}
                                            {{ value }}
                                        {% endif %}
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                        <div class="finding-item">
                            <div class="finding-value">{{ reconnaissance.misc }}</div>
                        </div>
                    {% endif %}
                </div>
            </div>
            {% endif %}
            
            <!-- All Other Reconnaissance Categories -->
            {% for category, details in reconnaissance.items() %}
                {% if category not in ['network', 'security', 'webapp', 'infrastructure', 'misc'] %}
                <div class="section">
                    <h2>{{ category|replace('_', ' ')|title }}</h2>
                    
                    <div class="category-container">
                        {% if details is mapping %}
                            <table>
                                <thead>
                                    <tr>
                                        <th>Property</th>
                                        <th>Value</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for key, value in details.items() %}
                                    <tr>
                                        <td><strong>{{ key|replace('_', ' ')|title }}</strong></td>
                                        <td>
                                            {% if value is mapping %}
                                                {% for k, v in value.items() %}
                                                    <div class="finding-item">
                                                        <div class="finding-key">{{ k|replace('_', ' ')|title }}</div>
                                                        <div class="finding-value">{{ v }}</div>
                                                    </div>
                                                {% endfor %}
                                            {% elif value is iterable and value is not string %}
                                                {% for item in value %}
                                                    <span class="tech-tag">{{ item }}</span>
                                                {% endfor %}
                                            {% else %}
                                                {{ value }}
                                            {% endif %}
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        {% else %}
                            <div class="finding-item">
                                <div class="finding-value">{{ details }}</div>
                            </div>
                        {% endif %}
                    </div>
                </div>
                {% endif %}
            {% endfor %}
        </div>
        
        <!-- Footer -->
        <div class="footer">
            <p><strong>VulnRadar Reconnaissance Report</strong></p>
            <p>This report was automatically generated by VulnRadar reconnaissance scanner</p>
            <p style="margin-top: 10px; color: #999; font-size: 0.85em;">Report generated on {{ scan_time }}</p>
        </div>
    </div>
</body>
</html>
